@model DoAnMonLapTrinhWeb_Nhom1.Models.KhuyenMai

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/Layoutadmin.cshtml";
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-danger" role="alert" id="alertMessage">
        @TempData["Message"]
    </div>
}
<h1>Thêm khuyến mãi</h1>

<h4>KhuyenMai</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenKhuyenMai" class="control-label"></label>
                <input asp-for="TenKhuyenMai" class="form-control" />
                <span asp-validation-for="TenKhuyenMai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoiDungKhuyenMai" class="control-label"></label>
                <input asp-for="NoiDungKhuyenMai" class="form-control" />
                <span asp-validation-for="NoiDungKhuyenMai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayKhuyenMai" class="control-label"></label>
                <input asp-for="NgayKhuyenMai" class="form-control" />
                <span asp-validation-for="NgayKhuyenMai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhanTramKhhuyenMai" class="control-label"></label>
                <input asp-for="PhanTramKhhuyenMai" class="form-control" />
                <span asp-validation-for="PhanTramKhhuyenMai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Lấy phần tử thông báo
        var alertElement = document.getElementById('alertMessage');

        // Ẩn thông báo tự động sau 5 giây
        setTimeout(function () {
            alertElement.style.display = 'none'; // Ẩn thông báo
        }, 5000);
    });
</script>